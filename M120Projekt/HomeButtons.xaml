<UserControl x:Class="M120Projekt.HomeButtons"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:M120Projekt"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel Grid.Column="1" Grid.Row="1">
            <Label x:Name="Label"
         Content="Willkomen zur Bibliothek Korhaus" HorizontalAlignment="Center" FontSize="25"/>
            <Button Content="Nutzer erfasssen"  Margin="10, 25, 15, 10" Height="40" Click="NutzerErfassen"></Button>
            <Button Content="Bücher erfassen"  Margin="10, 12, 15, 10" Height="40"></Button>
            <Button Content="Fällige Abgaben"  Margin="10, 12, 15, 10" Height="40"></Button>
            <Button Content="Einstellungen"  Margin="10,12,15,10" Height="40"></Button>
        </StackPanel>
    </Grid>
</UserControl>
